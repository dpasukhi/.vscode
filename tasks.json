{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start DRAWEXE debug",
      "type": "shell",
      "group": "build",
      "command": "export DISPLAY=\":90.0\"; rlwrap \"${workspaceFolder}/build/draw.sh\" debug"
    },
    {
      "label": "Start DRAWEXE release",
      "type": "shell",
      "command": "export DISPLAY=\":90.0\"; rlwrap \"${workspaceFolder}/build/draw.sh\""
    },
    {
      "label": "Start valgrind DRAWEXE debug",
      "type": "shell",
      "group": "build",
      "command": "export DISPLAY=\":90.0\"; valgrind --leak-check=yes \"${workspaceFolder}/build/draw.sh\" debug"
    },
  ]
}